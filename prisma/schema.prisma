generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {  
  id Int @id @default(autoincrement())
  email  String? @unique @db.VarChar(255)
  authUserId        String? @unique @db.Char(36)
  created           DateTime? @default(now()) @db.DateTime(0)
  updated           DateTime? @updatedAt @default(now()) @db.DateTime(0)  
  role              Role      @default(BASIC)
  timezone          Int?
  exercises Exercise[]
  workouts  Workout[]

  @@index([email])
}

model Exercise {
  id                Int       @id @default(autoincrement())
  user_id           Int
  name              String?   @unique @db.VarChar(255)
  created           DateTime? @default(now()) @db.DateTime(0)
  updated           DateTime? @updatedAt @default(now()) @db.DateTime(0)
  user              User @relation(fields: [user_id], references: [id])
  workout_exercise  WorkoutExercise[]

  @@index([name])
}

model Workout {
  id                Int       @id @default(autoincrement())
  user_id           Int
  timestamp         DateTime? @db.DateTime(0)
  notes             String?   @db.Text
  created           DateTime? @default(now()) @db.DateTime(0)
  scheduled         Boolean?
  updated           DateTime? @updatedAt @default(now()) @db.DateTime(0)
  user              User @relation(fields: [user_id], references: [id])
  workout_exercise  WorkoutExercise[]
}

model WorkoutExercise {
  id          Int       @id @default(autoincrement())
  exercise_id Int
  workout_id  Int 
  created     DateTime? @default(now()) @db.DateTime(0)
  updated     DateTime? @updatedAt @default(now()) @db.DateTime(0)
  exercise    Exercise @relation(fields: [exercise_id], references: [id])
  workout     Workout @relation(fields: [workout_id], references: [id])
  workout_set WorkoutSets[]
}

model WorkoutSets {
  id            Int       @id @default(autoincrement())
  we_id         Int
  setno         Int?
  reps          Int?
  weight        Float?
  weight_units  String?   @db.VarChar(20)
  created DateTime? @default(now()) @db.DateTime(0)
  updated DateTime? @updatedAt @default(now()) @db.DateTime(0)
  workout_exericse WorkoutExercise @relation(fields: [we_id], references: [id])
}

enum Role {
  BASIC
  ADMIN
}
